    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button HorizontalAlignment="Center" Grid.Column="1" x:Name="connClient" FontSize="17" Foreground="White" Background="Orange" Click="connClient_Click">
            <StackPanel>
                <Image Margin="10" Source="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" Height="150" />
                <TextBlock Text="Se Connecter en tant que Client"></TextBlock>
            </StackPanel>
        </Button>

        <Button HorizontalAlignment="Center" Grid.Column="2" x:Name="ConnChauffeur" FontSize="15" Foreground="White" Background="Blue" Click="ConnChauffeur_Click">
            <StackPanel>
                <Image Margin="10" Source="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" Height="150" />
                <TextBlock Text="Se Connecter en tant que Chauffeur"></TextBlock>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Center"  Grid.Column="3" x:Name="Connadmin" FontSize="17" Foreground="White" Background="DeepPink" Click="Connadmin_Click">
            <StackPanel>
                <Image Margin="10" Source="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" Height="150" />
                <TextBlock Text="Se Connecter en tant qu'admin"></TextBlock>
            </StackPanel>
        </Button>
    </Grid>
