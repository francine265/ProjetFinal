    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel HorizontalAlignment="Center" Margin="20,50,50,50" Background="LightBlue">
        <TextBlock Text="Creation Admin" TextAlignment="Center" FontSize="50">
            
        </TextBlock>
        <StackPanel x:Name="formAdmin" Margin="100,100,100,100">
        <TextBox x:Name="tbxEmail" Header="Email:" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="tbxpasswordAmin" Header="password:" HorizontalAlignment="Stretch"/>
        <Button x:Name="admin" Margin="20,10,10,10" Click="admin_Click" Content="Ajouter" Background="Bisque"/>
    </StackPanel>
    </StackPanel>
</Page>
